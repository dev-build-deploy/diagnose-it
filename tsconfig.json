{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "types": ["node", "jest"],
    "stripInternal": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
