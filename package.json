{
  "name": "@dev-build-deploy/diagnose-it",
  "version": "0.0.0",
  "description": "Expressive Diagnostics library",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "./dist/**/*"
  ],
  "engines": ">=16.0.0",
  "scripts": {
    "start": "tsx watch ./src/index.ts",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "TZ=utc NODE_OPTIONS=--experimental-vm-modules jest --watchAll",
    "test:ci": "TZ=utc NODE_OPTIONS=--experimental-vm-modules jest --ci --collectCoverage",
    "lint": "eslint --ext .ts .",
    "format": "prettier --write **/*.ts && prettier --write **/*.ts"
  },
  "author": "Kevin de Jong",
  "license": "MIT",
  "keywords": [
    "Logging",
    "Diagnostics",
    "Debugging",
    "Error Handling"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-build-deploy/diagnose-it.git"
  },
  "bugs": {
    "url": "https://github.com/dev-build-deploy/diagnose-it/issues"
  },
  "homepage": "https://github.com/dev-build-deploy/diagnose-it#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/node16": "^16.1.1",
    "@types/diff": "^5.0.8",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.1.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@dev-build-deploy/sarif-it": "<1",
    "chalk": "^5",
    "diff": "^5.1.0"
  }
}
